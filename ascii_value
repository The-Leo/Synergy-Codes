#include <stdio.h>
#include <stdlib.h>

int main(){
char character;

printf("Please Enter a Character\n");

scanf("%c", &character);

// %d displays the integer value of a character
// %c displays the actual character

printf("The ASCII value of %c is %d\n", character, character);

return 0;
}

//Generating the ASCII Value with the getchar function. 
#include <stdio.h>

int main() {
    char character;
    printf("Enter a character: ");
    character=getchar();
    printf("The ASCII value of %c is %d\n", character, character);
    return 0;
}